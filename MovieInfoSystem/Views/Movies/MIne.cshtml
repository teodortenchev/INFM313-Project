@model List<MovieListingServiceModel>

@{
    ViewBag.Title = "My movies";
}

@if (Model.Count() == 0)
{
    <h2 class="text-center mt-5">Currently you don't have any movies.</h2>
    <div class="container text-center mt-5">
        <form method="get">
            <button type="submit" class="btn btn-primary" asp-action="Add" asp-controller="Movies">Add movie</button>
        </form>
    </div>
}
<partial name="_MoviesListingPartial" model="@Model" />